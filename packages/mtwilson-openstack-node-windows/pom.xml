<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    
    <groupId>com.intel.mtwilson.openstack.packages</groupId>
    <artifactId>mtwilson-openstack-node-windows</artifactId>
    <version>3.2.1-SNAPSHOT</version>
    <packaging>pom</packaging>
    <description>Self-extracting executable that installs the OpenStack extensions for the compute node</description>

    <parent>
        <groupId>com.intel.mtwilson.openstack.packages</groupId>
        <artifactId>mtwilson-openstack-maven-build-packages</artifactId>
        <version>3.2.1-SNAPSHOT</version>
    </parent>
  
    <properties>
        <!-- this becomes the installer filename, like ${makeself.name}.bin 
        <makeself.name>${project.artifactId}-${project.version}</makeself.name> -->
        <makeself.directory>${project.build.directory}/${project.artifactId}-${project.version}</makeself.directory>

    </properties>
  
    <dependencies>
        <dependency>
            <groupId>com.intel.mtwilson.openstack.computenode</groupId>
            <artifactId>mtwilson-openstack-node-policyagent-hooks</artifactId>
            <version>${project.version}</version>
            <type>zip</type>
        </dependency>
        <dependency>
            <groupId>com.intel.mtwilson.openstack.computenode</groupId>
            <artifactId>mtwilson-openstack-node-vm-attestation</artifactId>
            <version>${project.version}</version>
            <type>zip</type>
        </dependency>
    </dependencies>


    <profiles>
        <profile>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            
            <build>
                <plugins>
                    <!-- begin deploy installers to repository -->
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>build-helper-maven-plugin</artifactId>
                    </plugin>                 
                    <!-- end deploy installers to repository -->
                    
                    <plugin>
                        <artifactId>maven-resources-plugin</artifactId>
                        <version>2.5</version>
                        <executions>
                            <execution>
                                <id>copy-resources</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${makeself.directory}</outputDirectory>
                                    <resources>
                                        <resource>
                                           <directory>src/main/resources</directory>
                                           <includes>
                                                <include>**/*</include>
                                            </includes>
                                            <filtering>false</filtering>
                                        </resource>
                                    </resources>
                                </configuration>            
                            </execution>
                        </executions>
                    </plugin>
                            
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <version>2.4</version>
                        <executions>
                            <execution>
                                <id>copy</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>com.intel.mtwilson.openstack.computenode</groupId>
                                            <artifactId>mtwilson-openstack-node-policyagent-hooks</artifactId>
                                            <version>${project.version}</version>
                                            <type>zip</type>
                                            <outputDirectory>${makeself.directory}</outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>com.intel.mtwilson.openstack.computenode</groupId>
                                            <artifactId>mtwilson-openstack-node-vm-attestation</artifactId>
                                            <version>${project.version}</version>
                                            <type>zip</type>
                                            <outputDirectory>${makeself.directory}</outputDirectory>
                                        </artifactItem>                                        
                                    </artifactItems>
                                    <overWriteReleases>false</overWriteReleases>
                                    <overWriteSnapshots>true</overWriteSnapshots>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>1.4.0</version>
                        <executions>
                            <execution>
                                <id>create-single-installer</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>bash</executable>
                                    <arguments>
                                        <argument>makezip-auto.sh</argument>
                                        <argument>${makeself.directory}</argument>
                                        <argument>${project.version}</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <!-- end create self-extracting installer plugin -->
                </plugins>

                <pluginManagement>
                    <plugins>
                        <plugin>
                            <groupId>org.codehaus.mojo</groupId>
                            <artifactId>build-helper-maven-plugin</artifactId>
                            <version>1.5</version>
                            <executions>
                                <execution>
                                    <id>attach-artifacts</id>
                                    <phase>package</phase>
                                    <goals>
                                        <goal>attach-artifact</goal>
                                    </goals>
                                    <configuration>
                                        <artifacts>
                                            <artifact>
                                                <file>${project.build.directory}/${project.artifactId}-${project.version}.exe</file>
                                                <type>exe</type>
                                                <!-- this is the single self-extracting installer -->
                                            </artifact>
                                        </artifacts>
                                    </configuration>
                                </execution>
                            </executions>
                        </plugin>
                    </plugins>
                </pluginManagement>
            </build>          
     </profile>
    </profiles>

</project>
